  <!-- <a href={url} target={target}> -->
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        
        <!-- Add github url for project -->
        <!-- {github_url && ( 
          <div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[130%] inline-block p-1">
              <a href={github_url} target={target} aria-label="Project's Github" title="Project's Github">
                  <div style="display: flex; align-items: center;">
                      <img src="./icons/github.svg" alt="Github" class="w-8 h-8"/>
                  </div>
              </a>
            </div> )} -->

